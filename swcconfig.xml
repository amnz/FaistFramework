<?xml version="1.0"?>
<flex-config xmlns="http://www.adobe.com/2006/flex-config">
    <output>distribute/lib/faist.swc</output>
    <compute-digest>false</compute-digest>
    <compiler>
      <source-path>
        <path-element>./src</path-element>
      </source-path>
      <external-library-path append="true">
        <path-element>distribute/lib/as3crypto.swc</path-element>
      </external-library-path>
      <debug>false</debug>
    </compiler>
    
    <include-classes>
        <class>ServiceProxy</class>
        <class>ClientProxy</class>
        
        <class>jp.wda.faist.Kernel</class>
        <class>jp.wda.faist.ClientKernel</class>
        <class>jp.wda.faist.ServerKernel</class>
        <class>jp.wda.faist.FaistUtil</class>
        
        <class>jp.wda.faist.events.FaistEvent</class>
        <class>jp.wda.faist.events.FaistErrorEvent</class>
        <class>jp.wda.faist.events.FatalErrorEvent</class>
        <class>jp.wda.faist.events.FaistXMLEvent</class>
        <class>jp.wda.faist.events.LaunchProgressEvent</class>
        
        <class>jp.wda.faist.selector.ClientSelector</class>
        
        <class>jp.wda.faist.type.ParameterType</class>
        <class>jp.wda.faist.type.Client</class>
        <class>jp.wda.faist.type.Encrypted</class>
    </include-classes>
</flex-config>
